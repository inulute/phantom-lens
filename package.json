{
  "name": "phantomlens",
  "version": "1.1.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "clean": "rimraf dist dist-electron",
    "build:swift": "cd swift-helpers && swift build -c release",
    "build:swift:universal": "cd swift-helpers && arch -arm64 swift build -c release && cp .build/release/swift-helpers .build/release/swift-helpers-universal",
    "build:swift:check": "node -e \"if(process.platform === 'darwin') { require('child_process').execSync('npm run build:swift:universal', {stdio: 'inherit'}); } else { console.log('Skipping Swift build on non-macOS platform'); }\"",
    "build:native": "cd native && node-gyp rebuild",
    "build:native:clean": "cd native && node-gyp clean && node-gyp rebuild",
    "dev": "cross-env NODE_ENV=development vite",
    "dev:prod": "cross-env NODE_ENV=production npm run clean && vite build && tsc -p tsconfig.electron.json && electron .",
    "build": "cross-env NODE_ENV=production rimraf dist dist-electron && npm run build:swift:check && vite build && tsc -p tsconfig.electron.json && electron-builder --mac --win --x64",
    "build:mac": "cross-env NODE_ENV=production rimraf dist dist-electron && npm run build:swift:universal && vite build && tsc -p tsconfig.electron.json && electron-builder --mac",
    "build:win": "cross-env NODE_ENV=production rimraf dist dist-electron && vite build && tsc -p tsconfig.electron.json && electron-builder --win",
    "build:linux": "cross-env NODE_ENV=production rimraf dist dist-electron && vite build && tsc -p tsconfig.electron.json && electron-builder --linux",
    "dist": "npm run build",
    "publish": "cross-env NODE_ENV=production rimraf dist dist-electron && npm run build:swift:check && vite build && tsc -p tsconfig.electron.json && electron-builder --publish=always",
    "publish:mac": "cross-env NODE_ENV=production rimraf dist dist-electron && npm run build:swift:universal && vite build && tsc -p tsconfig.electron.json && electron-builder --mac --publish=always",
    "publish:win": "cross-env NODE_ENV=production rimraf dist dist-electron && vite build && tsc -p tsconfig.electron.json && electron-builder --win --publish=always",
    "publish:linux": "cross-env NODE_ENV=production rimraf dist dist-electron && vite build && tsc -p tsconfig.electron.json && electron-builder --linux --publish=always",
    "release": "npm run publish",
    "release:draft": "cross-env NODE_ENV=production rimraf dist dist-electron && npm run build:swift:check && vite build && tsc -p tsconfig.electron.json && electron-builder --publish=onTagOrDraft",
    "package": "npm run build && electron-builder build",
    "package-mac": "npm run build && electron-builder build --mac",
    "package-win": "npm run build && electron-builder build --win"
  },
  "build": {
    "appId": "com.inulute.phantomlens",
    "productName": "PhantomLens",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "electron/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "asar": true,
    "compression": "maximum",
    "generateUpdatesFilesForAllChannels": true,
    "electronUpdaterCompatibility": ">=2.16",
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "PhantomLens-${arch}.${ext}",
      "icon": "assets/icons/mac/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "Developer ID Application",
      "notarize": true,
      "protocols": {
        "name": "PhantomLens-protocol",
        "schemes": [
          "PhantomLens"
        ]
      },
      "extraResources": [
        {
          "from": "swift-helpers/.build/release/swift-helpers-universal",
          "to": "swift-helpers",
          "filter": [
            "**/*"
          ]
        }
      ],
      "publish": {
        "provider": "github",
        "owner": "inulute",
        "repo": "phantom-lens-prod",
        "private": true,
        "releaseType": "release"
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/win/icon.ico",
      "artifactName": "${productName}-Windows-${version}.${ext}",
      "protocols": {
        "name": "phantomlens-protocol",
        "schemes": [
          "phantomlens"
        ]
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/png/icon-256x256.png",
      "artifactName": "${productName}-Linux-${version}.${ext}",
      "protocols": {
        "name": "PhantomLens-protocol",
        "schemes": [
          "PhantomLens"
        ]
      },
      "publish": {
        "provider": "github",
        "owner": "inulute",
        "repo": "phantom-lens-prod",
        "private": true,
        "releaseType": "release"
      },
      "category": "Development"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "inulute",
        "repo": "phantom-lens-prod",
        "private": true,
        "releaseType": "release"
      }
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    }
  },
  "keywords": [
    "electron",
    "screen-capture",
    "ai-assistant",
    "developer-tools",
    "phantomlens"
  ],
  "author": "inulute",
  "license": "MIT",
  "description": "PhantomLens - AI-powered screen analysis and assistance tool",
  "homepage": "https://github.com/inulute/phantom-lens",
  "repository": {
    "type": "git",
    "url": "https://github.com/inulute/phantom-lens.git"
  },
  "bugs": {
    "url": "https://github.com/inulute/phantom-lens/issues"
  },
  "dependencies": {
    "@electron/notarize": "^2.3.0",
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-radio-group": "^1.3.4",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@tanstack/react-query": "^5.64.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.2.4",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.460.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.5.2",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "screenshot-desktop": "^1.15.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@electron/typescript-definitions": "^8.14.0",
    "@types/color": "^4.2.0",
    "@types/diff": "^6.0.0",
    "@types/electron-store": "^1.3.1",
    "@types/lodash": "^4.17.17",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/screenshot-desktop": "^1.12.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.4.2",
    "vite": "^6.3.3",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
